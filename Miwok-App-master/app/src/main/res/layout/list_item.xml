<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:minHeight="@dimen/list_item_height"
                android:background="@color/tan_background"

                xmlns:tools="http://schemas.android.com/tools">
    <ImageView android:layout_width="@dimen/list_item_height" android:layout_height="78dp"
               android:id="@+id/imageView"
               android:layout_gravity="center_vertical"

    />

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                  android:orientation="vertical"


                  android:layout_alignParentBottom="true"
                  android:layout_alignParentTop="true"
                  android:layout_toRightOf="@id/imageView"
                  android:minHeight="88dp"
                  android:id="@+id/secondLinearLayout"
    >
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/miwok_text"

                  android:layout_marginLeft="16dp"
                  android:textColor="@android:color/white"
                  android:layout_marginTop="4dp"
                  android:layout_weight="1"

                  tools:text="Lutti"
                  android:textStyle="bold" android:textSize="25sp"
                  android:textAppearance="?android:textAppearanceMedium"/>
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:id="@+id/english_text"
                  android:layout_marginLeft="16dp"
                  android:layout_weight="1"
                  tools:text="One" android:textSize="20sp" android:layout_marginTop="4dp"/>


    </LinearLayout>
    <ImageView android:layout_width="24dp" android:layout_height="24dp"
               android:src="@mipmap/baseline_play_arrow_black_24dp"
               android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:layout_marginRight="16dp"
    />

</RelativeLayout>